<Window x:Class="CaracteresLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaracteresLimitados"
        mc:Ignorable="d"
        Title="Caracteres Limitados" Height="450" Width="800"
        Icon="img/icon.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE24F4F" Offset="0"/>
                <GradientStop Color="#FFFDFDFD" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="TextoTextBox" AcceptsReturn="True" MaxLength="140" HorizontalAlignment="Left" Height="321" Margin="30,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="725" TextChanged="TextoTextBox_TextChanged"/>
        <TextBlock x:Name="LimiteTextBlock" HorizontalAlignment="Left" Margin="657,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="" Foreground="#FF726D6D" FontSize="18"></TextBlock>
    </Grid>
</Window>
